# reload zsh config
alias c="clear"
alias x="exit"
alias r="source ~/.zshrc"

# filesystem aliases
alias .="open ."
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# tmux aliases
alias ta="tmux attach"
alias tl="tmux ls"
alias ta="tmux attach -t"
alias td="tmux detach"
alias tns="tmux new-session -s"
alias tks="tmux kill-session"
alias tka="tmux kill-server"
